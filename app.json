{
  "expo": {
    "name": "e-commerce",
    "slug": "e-commerce",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anasx7.ecommerce",
      "infoPlist": {
        "ExpoLocalization_supportsRTL": true,
        "ExpoLocalization_forcesRTL": true,
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-adaptive-icon.png",
        "backgroundColor": "#4e148c"
      },
      "package": "com.anasx7.ecommerce"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/app-splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "native",
          "backgroundColor": "#4e148c",
          "enableFullScreenImage_legacy": true
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/NotoKufiArabic-Light.ttf",
            "./assets/fonts/NotoKufiArabic-Regular.ttf",
            "./assets/fonts/NotoKufiArabic-SemiBold.ttf",
            "./assets/fonts/NotoKufiArabic-Bold.ttf",
            "./assets/fonts/NotoKufiArabic-ExtraBold.ttf"
          ]
        }
      ],
      "expo-localization",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "supportsRTL": true,
      "forcesRTL": true,
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "9a6c3f26-71d0-4c7a-a537-1722d1e582c8"
      }
    }
  }
}
